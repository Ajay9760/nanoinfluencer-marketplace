# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nanoinfluencer_dev
DB_USER=postgres
DB_PASSWORD=password
DATABASE_URL=postgresql://postgres:password@localhost:5432/nanoinfluencer_dev

# Server Configuration
NODE_ENV=development
PORT=3001
SERVER_NAME=nanoinfluencer-api

# Security Configuration - Secure Token System
ACCESS_TOKEN_SECRET=your-super-secret-access-key-change-in-production-min-32-chars
REFRESH_TOKEN_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Legacy JWT Configuration (for backward compatibility)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your-session-secret-for-cookie-signing

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3002,http://localhost:3000
FRONTEND_URL=http://localhost:3002

# Rate Limiting Configuration (requests per window)
GENERAL_RATE_LIMIT_MAX=1000
AUTH_RATE_LIMIT_MAX=10
CAMPAIGN_RATE_LIMIT_MAX=20

# Logging Configuration
LOG_LEVEL=info

# Error Tracking (Sentry)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
FROM_EMAIL=noreply@nanoinfluencer.com
FROM_NAME=NanoInfluencer Marketplace

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Redis Configuration (for session storage and caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Payment Configuration (Stripe - TEST MODE ONLY)
# WARNING: These are test keys only - NO LIVE MONEY TRANSFER
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_test_your_webhook_secret_here
STRIPE_API_VERSION=2023-10-16
STRIPE_CURRENCY=usd

# Escrow Configuration (Test Mode)
ESCROW_ENABLED=true
ESCROW_HOLD_PERIOD_DAYS=7
ESCROW_AUTO_RELEASE=false
PAYMENT_TEST_MODE=true

# Social Media API Keys (for influencer verification)
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret
TIKTOK_CLIENT_ID=your-tiktok-client-id
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
YOUTUBE_API_KEY=your_youtube_api_key

# AWS S3 Configuration (for secure file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=nanoinfluencer-uploads
S3_PRESIGNED_URL_EXPIRES=300

# File Upload Security Configuration
UPLOAD_MAX_FILE_SIZE_MB=100
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp,mp4,webm,mov,avi,pdf,txt,doc,docx
UPLOAD_VIRUS_SCAN_ENABLED=true
ENABLE_VIRUS_SCANNER=true

# Admin Configuration
ADMIN_EMAILS=admin@example.com
ADMIN_IPS=127.0.0.1,::1

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000

# Monitoring and Metrics
PROMETHEUS_ENABLED=true
METRICS_PATH=/metrics
HEALTH_PATH=/api/health

# Development/Debug Configuration
DEBUG=app:*
ENABLE_REQUEST_LOGGING=true
ENABLE_SQL_LOGGING=false

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_CAMPAIGN_APPROVAL=true
ENABLE_AUTOMATED_PAYMENTS=false
ENABLE_FILE_UPLOAD=true
ENABLE_VIRUS_SCANNING=true
ENABLE_ESCROW_SYSTEM=true

# Testing Configuration
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_db
TEST_REDIS_URL=redis://localhost:6379/1
TEST_S3_BUCKET=nanoinfluencer-test-uploads
TEST_STRIPE_PUBLISHABLE_KEY=pk_test_your_test_key
TEST_STRIPE_SECRET_KEY=sk_test_your_test_key

# CI/CD Configuration
CI_ENVIRONMENT=false
CODECOV_TOKEN=your_codecov_token_here
SLACK_WEBHOOK_URL=your_slack_webhook_for_deployments
SECURITY_SLACK_WEBHOOK_URL=your_security_alerts_webhook

# Cache Configuration
CACHE_TTL=3600
ENABLE_RESPONSE_CACHE=true
