# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nanoinfluencer_dev
DB_USER=postgres
DB_PASSWORD=password
DATABASE_URL=postgresql://postgres:password@localhost:5432/nanoinfluencer_dev

# Server Configuration
NODE_ENV=development
PORT=3001
SERVER_NAME=nanoinfluencer-api

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=12

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3002,http://localhost:3000
FRONTEND_URL=http://localhost:3002

# Rate Limiting Configuration (requests per window)
GENERAL_RATE_LIMIT_MAX=1000
AUTH_RATE_LIMIT_MAX=10
CAMPAIGN_RATE_LIMIT_MAX=20

# Logging Configuration
LOG_LEVEL=info

# Error Tracking (Sentry)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
FROM_EMAIL=noreply@nanoinfluencer.com
FROM_NAME=NanoInfluencer Marketplace

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Redis Configuration (for session storage and caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Payment Configuration (Stripe)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Social Media API Keys (for influencer verification)
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret
TIKTOK_CLIENT_ID=your-tiktok-client-id
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
YOUTUBE_API_KEY=your_youtube_api_key

# AWS Configuration (for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=nanoinfluencer-uploads

# Admin Configuration
ADMIN_EMAILS=admin@example.com
ADMIN_IPS=127.0.0.1,::1

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000

# Monitoring and Metrics
PROMETHEUS_ENABLED=true
METRICS_PATH=/metrics
HEALTH_PATH=/api/health

# Development/Debug Configuration
DEBUG=app:*
ENABLE_REQUEST_LOGGING=true
ENABLE_SQL_LOGGING=false

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_CAMPAIGN_APPROVAL=true
ENABLE_AUTOMATED_PAYMENTS=false

# Cache Configuration
CACHE_TTL=3600
ENABLE_RESPONSE_CACHE=true
