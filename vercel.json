{
  "name": "nanoinfluencer-marketplace",
  "version": 2,
  "builds": [
    {
      "src": "frontend-web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://your-backend-url.herokuapp.com/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend-web/$1"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://your-backend-url.herokuapp.com/api"
  },
  "build": {
    "env": {
      "REACT_APP_API_URL": "https://your-backend-url.herokuapp.com/api"
    }
  }
}