{
  "name": "nanoinfluencer-frontend-web",
  "version": "1.0.0",
  "description": "Web frontend for NanoInfluencer MarketPlace",
  "private": true,
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "react-query": "^3.39.3",
    "axios": "^1.6.0",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "tailwindcss": "^3.3.6",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "recharts": "^2.8.0",
    "react-select": "^5.8.0",
    "react-dropzone": "^14.2.3",
    "react-table": "^7.8.0",
    "react-paginate": "^8.2.0",
    "react-modal": "^3.16.1",
    "react-loading-skeleton": "^3.3.1",
    "react-infinite-scroll-component": "^6.1.0",
    "socket.io-client": "^4.7.4",
    "jwt-decode": "^4.0.0",
    "zustand": "^4.4.7",
    "framer-motion": "^10.16.16",
    "react-helmet-async": "^1.3.0",
    "web-vitals": "^3.5.0"
  },
  "devDependencies": {
    "react-scripts": "5.0.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "eslint": "^8.54.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "cypress": "^13.6.0",
    "@cypress/react": "^8.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write src/",
    "analyze": "npm run build && npx bundle-analyzer build/static/js/*.js",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "deploy:staging": "npm run build && echo 'Deploying web to staging...'",
    "deploy:production": "npm run build && echo 'Deploying web to production...'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/reportWebVitals.js"
    ]
  },
  "proxy": "http://localhost:3001"
}